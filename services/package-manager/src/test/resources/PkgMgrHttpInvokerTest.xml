<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <!-- system-property -->
	<bean id="systemProps"
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" value="#{@systemProperties}" />
		<property name="targetMethod" value="putAll" />
		<property name="arguments">
			<util:properties>
				<prop key="server.data.dir">./target/</prop>
			</util:properties>
		</property>
	</bean> 

    <!-- Server side -->
    <bean name="packageManager" class="org.openthinclient.pkgmgr.impl.PackageManagerImpl" />

    <bean name="packageManagerServiceExporter"
          class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
        <property name="service" ref="packageManager"/>
        <property name="serviceInterface" value="org.openthinclient.pkgmgr.PackageManager" />        
    </bean>

    <bean id="httpServer" class="org.springframework.remoting.support.SimpleHttpServerFactoryBean">
        <property name="contexts">
            <util:map>
                <entry key="/PackageManagerService" value-ref="packageManagerServiceExporter"/>
            </util:map>
        </property>
        <property name="port" value="8087"/>
    </bean>
    
    <!-- client -->
    <bean id="packageManagerService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
       <property name="serviceUrl" value="http://localhost:8087/PackageManagerService" />
       <property name="serviceInterface" value="org.openthinclient.pkgmgr.PackageManager" />
    </bean>    
</beans>